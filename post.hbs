{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<div class="container">
  <main id="content" class="content" role="main">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
        <div class="page">
          <header class="page-header">
            <h3 class="page-title">{{ title }}</h3>
              <div class="row">
                {{#author}}
                  <div class="col-xs-offset-4 col-xs-4 col-sm-offset-5 col-sm-2 col-md-offset-5 col-md-2 col-lg-offset-5 col-lg-2">
                      <a href="{{url}}">
                        <div class="img-container">
                          {{#if image}}
                            <img src="{{image}}" alt="{{name}}" class="pull-left img-responsive thumb margin10 img-thumbnail author-thumbnail">
                          {{else}}
                            <img src="http://api.adorable.io/avatars/285/abott@adorable.png" alt="{{name}}" 
                            class="pull-left img-responsive thumb margin10 img-thumbnail author-thumbnail">
                          {{/if}}
                        </div>
                        {{ name }}
                      </a>
                  </div>
                {{/author}}
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="post-metadata">
                    <div> 
                      <i class="fa fa-calendar-o"></i>
                      <small><time>
                        {{ date format='DD MMMM YYYY' }}
                      </time></small>
                    </div>
                    <div>
                      {{#if tags}}
                          <i class="fa fa-tag"></i>
                          {{#foreach tags }}
                            <a href="{{url}}"><span class="label label-tag">{{name}}</span></a>
                          {{/foreach}}
                      {{/if}}
                    </div>
                  </div>
                </div>
              </div>
          </header>
          <article class="page-content">
            {{ content }}
          </article>

        
        </div>
      </div>
    </div>
  </main>
</div>

{{/post}}
